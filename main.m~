%% Preliminaries

cd ~/Repositories/MOGADOR   % Redirect to repo root directory
run params.m    % Load input parameter structure array
o = struct();   % Initialize output structure array

%% Simulate Objective Variables 

p.objectiveVars = simObjectivesFnc(...
    p.objectiveCount,...
    p.objectiveSimulationMean,...
	p.objectiveSimulationRange,...
	p.gridMask     );

%% Generate Initial Population

[ o(1,1).population, o(1,1).populationParams ] = initPopFncDEV(...
    p.populationSize,...
	p.objectiveVars,...
    p.objectiveFrac,...
	p.minClusterSize,...
	p.sourceIndex,...
	p.destinIndex,...
	p.gridMask     );

%% Initialize Genetic Algorithm

i = 1; % Need to come up with convergence criteria statement
stop = 0;

while stop == 0

    o(i,1).populationSelection = tournamentSelectionFnc(...
        o(i,1).population,...
        p.tournamentSize,...
        p.selectionProbability,...
        p.selectionType,...
        p.objectiveVars     );

    o(i+1,1).population = popCrossoverFnc(...
        populationSelection,sourceIndex,destinIndex,...
        crossoverType,gridMask);

    gen1PopMut = popMutationFnc(gen1Pop,gridMask,fraction,mutations);
    
    i = i+1;
    
    stop = 1;

end